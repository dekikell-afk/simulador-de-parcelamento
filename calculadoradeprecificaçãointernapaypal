  <div class="container">
    <h2>üå∑ Precifica√ß√£o Interna</h2>
    <label for="liquido">üíñ Valor l√≠quido desejado:</label>
    <input type="number" id="liquido" placeholder="Ex: 120.00">

    <label for="parcelasPrecificar">üìÜ N√∫mero de parcelas:</label>
    <input type="number" id="parcelasPrecificar" placeholder="Ex: 3">

    <button onclick="precificar()">‚ú® Calcular ‚ú®</button>

    <div id="resultadoPrecificacao"></div>
  </div>

  <script>
    function precificar() {
      let valorLiquido = parseFloat(document.getElementById("liquido").value);
      let parcelas = parseInt(document.getElementById("parcelasPrecificar").value);

      if (isNaN(valorLiquido) || parcelas <= 0) {
        document.getElementById("resultadoPrecificacao").innerHTML = "‚ö†Ô∏è Preencha os campos corretamente!";
        return;
      }

      let taxaOperacao = 0.0479;
      let taxaParcela = 0.0192;
      let tarifaFixa = 0.60;

      let taxaTotal = taxaOperacao + ((parcelas - 1) * taxaParcela);
      let bruto = (valorLiquido + tarifaFixa) / (1 - taxaTotal);
      let valorParcela = bruto / parcelas;
      let custoTotal = bruto - valorLiquido;

      document.getElementById("resultadoPrecificacao").innerHTML =
        `<p>üå∏ Valor a cobrar: <strong>R$ ${bruto.toFixed(2)}</strong></p>
         <p>üßÅ ${parcelas}x de <strong>R$ ${valorParcela.toFixed(2)}</strong></p>
         <p>üí´ Custo total: <strong>R$ ${custoTotal.toFixed(2)}</strong></p>
         <p>üåø Saldo l√≠quido: <strong>R$ ${valorLiquido.toFixed(2)}</strong></p>`;
    }
  </script>
